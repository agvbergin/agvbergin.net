<header>
    <img alt="" width="100" height="100" src="{{ '/img/coffeeMini.png' | url }}">
    {% set currentUrl %}{{ page.url }}{% endset %}
    <nav>
        <ul role="list">
            <li>
                <a {% if currentUrl === '/' %} aria-current="page" {% endif %} href="/">Home</a>
            </li>
            {% for page in collections.pages %}
                <li>
                    <a {% if currentUrl === page.url %} aria-current="page" {% endif %} href="{{ page.url }}">
                        {{ page.data.title }}
                    </a>
                </li>
            {%- endfor %}
            <li>
                <a href="{{ metadata.author.github }}">GitHub</a>
            </li>
            <li>
                <a href="{{ metadata.author.mastodon }}" rel="me">Mastodon</a>
            </li>
        </ul>
    </nav>
</header>